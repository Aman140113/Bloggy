<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog App</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="app">
    <!-- Left Sidebar -->
    <div class="sidebar">
  <h2>Blogs</h2>
  <div id="blogList">
    <% if (blogs.length === 0) { %>
      <p>No blogs yet</p>
    <% } else { %>
      <% blogs.forEach((blog, index) => { %>
        <div class="blog-item">
          <a href="/blogs/<%= blog.id %>">
            <%= blog.title %>
          </a>
        </div>
      <% }); %>
    <% } %>
  </div>
    </div>

    <!-- Right Side (Main content) -->
    <div class="main">
      <div class="container">
        <div class="card">
          <h1 class="page-title">Create your blog</h1>
          <form action="/submit" method="POST">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" name="title" id="title" required>
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <textarea name="content" id="content" rows="10" placeholder="Type here" required></textarea>
            </div>
            <div class="actions">
              <button type="submit" class="btn btn-primary">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    </div>
</body>
</html>
